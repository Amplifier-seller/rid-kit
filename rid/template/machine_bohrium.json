{
    "resources": {
        "local_k8s": {
            "template_config" : {
                "image": "pkufjhdocker/rid-lmp:latest", 
                "image_pull_policy" : "IfNotPresent"
            }
        },
        "slurm_2080": {
            "executor":{
            "machine_dict":{
                "batch_type": "Slurm",
                "context_type": "SSHContext",
                "local_root" : "./",
                "remote_root": "",
                "remote_profile":{
                    "hostname": "",
                    "username": "",
                    "password": "",
                    "port": 22,
                    "timeout": 20
                }
            },
            "resources_dict":{
                "number_node": 1,
                "cpu_per_node": 8,
                "gpu_per_node": 1,
                "queue_name": "GPU_3090",
                "group_size": 1,
                "source_list": ["/path/to/rid-lmp.env"]
            }
        }
        },
        "bohrium": {
            "executor":{
            "machine_dict":{
                "batch_type": "DpCloudServer",
                "context_type": "DpCloudServerContext",
                "local_root" : "./",
                "remote_profile":{
                    "email": "",
                    "password": "",
                    "program_id": "",
                    "input_data":{
                        "api_version":2,
                        "job_type": "container",
                        "log_file": "tmp_log",
                        "grouped":true,
                        "job_name": "test_rid",
                        "disk_size": 100,
                        "_instance_group_id": 4,
                        "scass_type":"c8_m32_1 * NVIDIA V100",
                        "platform": "ali",
                        "image_name":"registry.dp.tech/dptech/prod-11543/rid-tf:latest",
                        "on_demand":0
                        }
                }
            },
            "resources_dict":{
                "number_node": 1,
                "cpu_per_node": 8,
                "gpu_per_node": 1,
                "queue_name": "GPU",
                "group_size": 1
            }
        }
        }
    },

    "tasks": {
        "prep_exploration_config": "local_k8s",
        "run_exploration_config": "slurm_2080",
        "prep_label_config": "local_k8s",
        "run_label_config": "slurm_2080",
        "prep_select_config": "local_k8s",
        "run_select_config": "bohrium",
        "prep_data_config": "local_k8s",
        "run_train_config": "bohrium",
        "workflow_steps_config": "local_k8s"
    }
}